extends ./layout.jade
block contenido
	div(class="container")
		div(class="row")
			h1
			br
		div(class="row")
			div(class="col-sm-offset-2 col-sm-8 col-xs-12")
				div(class="text-center")
					img(src="/maskay/resources/logo.png", style="width:50%;")
					span(style='display:block;') "Intentar buscar algo"
				div(class="table", style="display:table; width:100%")
					div(class="table-cell", style="display:table-cell; height: 270px; text-align:center; vertical-align: middle;") 
						form(action="/maskay/login",method="post",class="form-horizontal")
							div(class="form-group")
								label(class="control-label col-sm-2",for="email") Correo:
								div(class="col-sm-10")
									input(type="text",name="email",placeholder="Correo", id="email", class="form-control")
							div(class="form-group")
								label(class="control-label col-sm-2",for="password") Contraseña:
								div(class="col-sm-10")
									input(type="password",name="password", id="password", class="form-control", placeholder="Contraseña")
							div(class="form-group")
								div(class="col-sm-offset-3 col-sm-6")
									button(type="submit",class="btn btn-primary btn-block") Entrar